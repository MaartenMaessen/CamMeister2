@model CamMeister2.Models.Camera

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>
<h4>Camera</h4>
<hr />
<iframe src="https://tinyurl.com/mr3z2j29" width="750" height="500" align="right"></iframe>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CamDescription" class="control-label"></label>
                <input asp-for="CamDescription" class="form-control" />
                <span asp-validation-for="CamDescription" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CreatedOn" class="control-label"></label>
                <input asp-for="CreatedOn" class="form-control" />
                <span asp-validation-for="CreatedOn" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CameraPhoto" class="control-label"></label>
                <div class="form-group">
                    <input class="form-control" asp-for="CameraPhoto" id="formFile">
                </div>
                <span asp-validation-for="CameraPhoto" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



